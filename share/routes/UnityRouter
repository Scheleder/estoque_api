const express = require ('express');
const UnityController = require('../controllers/UnityController');
const router = express.Router();

/**
 * @swagger
 * tags:
 *   name: Units
 *   description: Gerenciamento de locais
 */

/**
 * @swagger
 * /units:
 *   get:
 *     summary: Retorna a lista de todos as unidades
 *     tags: [Units]
 *     responses:
 *       200:
 *         description: Lista de Unidades
 *         content:
 *           application/json:
 *             schema:
 *               type: array
 *               items:
 *                 type: object
 *                 properties:
 *                   id:
 *                     type: integer
 *                     description: ID da unidade
 *                   name:
 *                     type: string
 *                     description: Nome da unidade
 *                   abrev:
 *                     type: string
 *                     description: Abreviatura da unidade
 */

router.get('/', UnityController.getAll);
router.get('/:id', UnityController.getOne);
router.post('/', UnityController.create);
router.put('/:id', UnityController.update);
router.delete('/:id', UnityController.delete);

module.exports = router;